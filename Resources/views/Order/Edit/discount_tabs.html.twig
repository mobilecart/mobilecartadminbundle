                    <tr>
                        <td>
                            <input type="checkbox" checked="checked" id="selected-{{ discount.id }}" class="selected-method" name="discounts[{{ discount.id }}]" />
                        </td>
                        <td>{{ discount.get('name') }}</td>
                        <td>{{ discount.get('applied_to') }}</td>
