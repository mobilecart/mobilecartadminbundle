<ul class="nav nav-tabs">
    <li class="active">
        <a href="#section-shipments" data-toggle="tab" aria-expanded="false">Shipments</a>
    </li>
    <li>
        <a class="btn btn-success" href="{{ path('cart_admin_order_shipment_new', {'order_id': order.id }) }}">Create</a>
    </li>
</ul>
<div class="tab-content">
    <div id="section-shipments" class="tab-pane tab-panel fade active in">

        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover dataTable">
                <thead class="">
                    <tr>
                        <th>ID</th>
                        <th>Address</th>
                        <th>Method</th>
                        <th>Price</th>
                        <th>Tracking</th>
                    </tr>
                </thead>
                <tbody class="selected-method-list">
                {% for shipment in shipments %}
                <tr>
                    <td>
                        <a class="btn btn-default" href="{{ path('cart_admin_order_shipment_edit', {'id': shipment.id }) }}">Edit</a>
                    </td>
                    <td>{{ shipment.name }}
                        <br>{{ shipment.street }}
                        {% if shipment.street2|length >0 %}<br>{{ shipment.street2 }}{% endif %}
                        <br>{{ shipment.city }}, {{ shipment.region }} {{ shipment.postcode }}
                        <br>{{ shipment.countryid }}
                    </td>
                    <td>{{ shipment.company }} {{ shipment.method }}</td>
                    <td>{{ decorate(shipment.price) }}</td>
                    <td>
                        <textarea class="form-control" name="tracking[{{ shipment.id }}]">{{ shipment.tracking }}</textarea>
                    </td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
