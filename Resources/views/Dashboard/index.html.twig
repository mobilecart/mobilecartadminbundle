{% extends admin() %}

{% block content %}

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Dashboard</h1>
        </div>
    </div>

    <div class="row">
        {% if template_sections is defined %}
            {% for section, sectionData in template_sections %}
                {% include sectionData.template with sectionData %}
            {% endfor %}
        {% endif %}
    </div>

    <div class="row text-center pad-top">

        <div class="col-lg-2 col-md-2 col-sm-2 col-xs-6">
            <div class="div-square">
                <a href="{{ path('cart_admin_order') }}">
                    <i class="fa fa-bar-chart-o fa-5x"></i>
                    <h4>Orders</h4>
                </a>
            </div>
        </div>

        <div class="col-lg-2 col-md-2 col-sm-2 col-xs-6">
            <div class="div-square">
                <a href="{{ path('cart_admin_customer') }}">
                    <i class="fa fa-users fa-5x"></i>
                    <h4>Customers</h4>
                </a>
            </div>
        </div>

        <div class="col-lg-2 col-md-2 col-sm-2 col-xs-6">
            <div class="div-square">
                <a href="{{ path('cart_admin_product') }}">
                    <i class="fa fa-shopping-cart fa-5x"></i>
                    <h4>Products</h4>
                </a>
            </div>
        </div>

        <div class="col-lg-2 col-md-2 col-sm-2 col-xs-6">
            <div class="div-square">
                <a href="{{ path('cart_admin_content') }}">
                    <i class="fa fa-file-code-o fa-5x"></i>
                    <h4>Content</h4>
                </a>
            </div>
        </div>

    </div>

{% endblock %}

{% block javascripts %}

    {{ parent() }}

    {% for section, sectionData in template_sections %}
        {% if sectionData.js_template is defined %}
            {% include sectionData.js_template with sectionData %}
        {% endif %}
    {% endfor %}

{% endblock %}

