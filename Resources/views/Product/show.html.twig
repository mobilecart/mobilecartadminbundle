{% extends 'MobileCartAdminBundle::admin-layout.html.twig' %}

{% block content %}
    <h1>Product</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Sku</th>
                <td>{{ entity.sku }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ entity.price }}</td>
            </tr>


            <tr>
                <th>Is_taxable</th>
                <td>{{ entity.istaxable }}</td>
            </tr>
            <tr>
                <th>Is_discountable</th>
                <td>{{ entity.isdiscountable }}</td>
            </tr>
            <tr>
                <th>Is_in_stock</th>
                <td>{{ entity.isinstock }}</td>
            </tr>
            <tr>
                <th>Can_backorder</th>
                <td>{{ entity.canbackorder }}</td>
            </tr>
            <tr>
                <th>Qty</th>
                <td>{{ entity.qty }}</td>
            </tr>
            <tr>
                <th>Custom_search</th>
                <td>{{ entity.customsearch }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('cart_admin_product') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('cart_admin_product_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
