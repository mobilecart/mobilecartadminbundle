
<ul class="nav nav-tabs">
    <li class="active">
        <a href="#section-options" data-toggle="tab" aria-expanded="true">Selected Options</a>
    </li>
    <li class="">
        <a href="#section-products" data-toggle="tab" aria-expanded="false">Selected Products</a>
    </li>
    <li class="">
        <a href="#section-search" data-toggle="tab" aria-expanded="false">Search Products</a>
    </li>
</ul>
<div class="tab-content">
    <div id="section-options" class="tab-pane fade active in">
        <select name="config_vars[]" class="form-control" multiple="multiple">
            {% for code, var in vars %}
                <option value="{{ code }}"{% if var.checked is defined %} selected="selected"{% endif %}>{{ var.name }}</option>
            {% endfor %}
        </select>
    </div>
    <div id="section-products" class="tab-pane fade">

        <div class="panel panel-default">

            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover dataTable">
                        <thead class="">
                            <tr>
                                <th>&nbsp;</th>
                                <th>ID</th>
                                <th>Type</th>
                                <th>Name</th>
                                <th>Sku</th>
                                <th>Price</th>
                                <th>Qty</th>
                            </tr>
                        </thead>
                        <tbody class="child-product-list">
                        {% for product in child_products %}
                            <tr>
                                <td><input type="checkbox" id="child-id-{{ product.id }}" name="config_ids[{{ product.id }}]" value="{{ product.id }}" checked="checked" /></td>
                                <td>{{ product.id }}</td>
                                <td>{{ product.type }}</td>
                                <td>{{ product.name }}</td>
                                <td>{{ product.sku }}</td>
                                <td>{{ product.price }}</td>
                                <td>{{ product.qty }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
    <div id="section-search" class="tab-pane fade">

        <div class="panel panel-default adv-filters">
            <div class="panel-heading">
                <a data-toggle="collapse" data-parent="#accordion" href="#{{ section_id }}-filters-panel"><i class="fa fa-wrench fa-fw"></i> Search Filters</a>
            </div>
            <div class="panel-body panel-collapse in" id="{{ section_id }}-filters-panel">
                <div id="{{ section_id }}-filters-container" class="filters-container">

                </div>
            </div>
        </div>

        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-md-5 grid-pager pull-left">

                    </div>
                    <div class="col-md-3">

                        <div class="pull-left">
                            <label>Show</label>
                            <select name="per_page">
                                <option value="15">15</option>
                                <option selected="selected" value="30">30</option>
                                <option value="45">45</option>
                                <option value="60">60</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4 adv-filters-buttons">
                        <div class="pull-right">
                            <button class="btn btn-primary adv-filters-search">Search</button>
                        </div>
                    </div>
                </div>

            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover dataTable">
                        <thead class="grid-header">
                        <tr>
                            <th><input type="checkbox" name="product_check_all" value="1" /></th>
                            <th class="sorting_desc" data-sort="id">ID</th>
                            <th class="sorting" data-sort="type">Type</th>
                            <th class="sorting" data-sort="name">Name</th>
                            <th class="sorting" data-sort="sku">Sku</th>
                            <th class="sorting" data-sort="price">Price</th>
                            <th class="sorting" data-sort="qty">Qty</th>
                        </tr>
                        </thead>
                        <tbody class="product-list">

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
