<ul class="nav nav-tabs">
    <li class="active">
        <a href="#section-selected-cats" data-toggle="tab" aria-expanded="true">Selected Categories</a>
    </li>
    <li class="">
        <a href="#section-search-cats" data-toggle="tab" aria-expanded="false">Search Categories</a>
    </li>
</ul>
<div class="tab-content">
    <div id="section-selected-cats" class="tab-pane fade active in">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover dataTable">
                        <thead class="grid-header">
                            <tr>
                                <th><input type="checkbox" name="category_check_all" value="1" /></th>
                                <th class="sorting_desc" data-sort="id">ID</th>
                                <th class="sorting" data-sort="name">Name</th>
                            </tr>
                        </thead>
                        <tbody class="selected-category-list">
                        {% for category in categories %}
                            <tr>
                                <td><input type="checkbox" name="category_ids[{{ category.get('id') }}]" value="{{ category.get('id') }}" checked="checked" /></td>
                                <td>{{ category.get('id') }}</td>
                                <td>{{ category.get('name') }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div id="section-search-cats" class="tab-pane fade">
        <div class="panel panel-default adv-filters">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-sm-6">
                        <a data-toggle="collapse" data-parent="#accordion" class="pull-left btn btn-default" href="#{{ section_id }}-filters-panel">Basic Filters</a>
                    </div>
                    <div class="col-sm-6">
                        <div class="pull-right adv-filters-buttons">
                            <button class="btn btn-primary adv-filters-search">Search</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-body panel-collapse in" id="{{ section_id }}-filters-panel">
                <div id="{{ section_id }}-filters-container" class="filters-container">

                </div>
            </div>
        </div>

        <div class="panel panel-default">
            <div class="panel-heading">

                <div class="row">
                    <div class="col-md-5 grid-pager pull-left">

                    </div>
                    <div class="col-md-3">

                        <div class="pull-left">
                            <label>Show</label>
                            <select name="per_page">
                                <option value="15">15</option>
                                <option selected="selected" value="30">30</option>
                                <option value="45">45</option>
                                <option value="60">60</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4">

                    </div>
                </div>

            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover dataTable">
                        <thead class="grid-header">

                        </thead>
                        <tbody class="category-list">

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>