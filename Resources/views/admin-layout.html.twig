{% extends 'MobileCartAdminBundle::base.html.twig' %}

{% block stylesheets %}
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="{{ asset('bundles/mobilecartadmin/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/mobilecartadmin/fonts/font-awesome/css/font-awesome.min.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/mobilecartadmin/css/styles.css') }}" rel="stylesheet">
{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        window.App = {};
        App.collections = {};
        App.collections.dynamic = {};
        App.models = {};
        App.views = {};
        App.views.dynamic = {};
        App.serverURL = '{{ path('_home') }}';
    </script>
    <script src="{{ asset('bundles/mobilecartadmin/js/json2.js') }}"></script>
    <script src="{{ asset('bundles/mobilecartadmin/js/jquery-1.11.0.min.js') }}"></script>
    <script src="{{ asset('bundles/mobilecartadmin/js/spin.min.js') }}"></script>
    <script src="{{ asset('bundles/mobilecartadmin/js/underscore.js') }}"></script>
    <script src="{{ asset('bundles/mobilecartadmin/js/backbone-min.js') }}"></script>
    <script src="{{ asset('bundles/mobilecartadmin/js/backbone.localStorage.js') }}"></script>
    <script src="{{ asset('bundles/mobilecartadmin/js/backbone.paginator.min.js') }}"></script>
    <script src="{{ asset('bundles/mobilecartadmin/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('bundles/mobilecartadmin/js/plugins/metisMenu/jquery.metisMenu.js') }}"></script>
    <script src="{{ asset('bundles/mobilecartadmin/js/global.js') }}"></script>

{% endblock %}

{% block body %}

{% block topnav %}

<header>
    <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <span class="navbar-brand">mobilecart.io</span>
        </div>
        {% block navigation %}
        <div class="collapse navbar-collapse navbar-collapse">
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#" aria-expanded="false">
                        <i class="fa fa-user fa-fw"></i>  <i class="fa fa-caret-down"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li><a href="#"><i class="fa fa-user fa-fw"></i> User Profile</a>
                        </li>
                        <li><a href="#"><i class="fa fa-gear fa-fw"></i> Settings</a>
                        </li>
                        <li class="divider"></li>
                        <li><a href="{{ path('logout') }}"><i class="fa fa-sign-out fa-fw"></i> Logout</a>
                        </li>
                    </ul>
                    <!-- /.dropdown-user -->
                </li>
            </ul>
        </div>
        {% endblock %}
    </nav>
</header>

{% endblock %}
{% block admin_menu %}
<nav class="navbar-default navbar-static-side" role="navigation">
    <div class="sidebar sidebar-collapse">
        <ul class="nav" id="side-menu">

            {% block admin_menu_list %}
            <li>
                <a href="{{ path('cart_admin_dashboard') }}"><i class="fa fa-dashboard fa-fw"></i> Dashboard</a>
            </li>
            <li>
                <a href="#"><i class="glyphicon glyphicon-shopping-cart icon-white"></i> &nbsp;Catalog<span class="fa arrow"></span></a>
                <ul class="nav nav-second-level">
                    <li><a href="{{ path('cart_admin_product') }}">Products</a></li>
                    <li><a href="{{ path('cart_admin_category') }}">Categories</a></li>
                </ul>
            </li>

            <li>
                <a href="{{ path('cart_admin_content') }}"><i class="fa fa-file-code-o fa-fw"></i> Content</a>
            </li>

            <li>
                <a href="{{ path('cart_admin_customer') }}"><i class="fa fa-users fa-fw"></i> Customers</a>
            </li>

            <li>
                <a href="#"><i class="fa fa-bar-chart-o fa-fw"></i> Sales<span class="fa arrow"></span></a>
                <ul class="nav nav-second-level">
                    <li><a href="{{ path('cart_admin_order') }}">Orders</a></li>
                    <li><a href="{{ path('cart_admin_discount') }}">Discounts</a></li>
                    <li><a href="{{ path('cart_admin_shipping_method') }}">Shipping Method</a></li>
                </ul>
            </li>

            <li>
                <a href="#"><i class="fa fa-sitemap fa-fw"></i> Custom Fields<span class="fa arrow"></span></a>
                <ul class="nav nav-second-level">
                    <li><a href="{{ path('cart_admin_item_var_set') }}">Field Sets</a></li>
                    <li><a href="{{ path('cart_admin_item_var') }}">Fields</a></li>
                    <li><a href="{{ path('cart_admin_item_var_set_var') }}">Field Set Maps</a></li>
                    <li>
                        <a href="#">Field Options <span class="fa arrow"></span></a>
                        <ul class="nav nav-third-level">
                            <li><a href="{{ path('cart_admin_item_var_option', {'datatype':'datetime'}) }}">Datetime</a></li>
                            <li><a href="{{ path('cart_admin_item_var_option', {'datatype':'decimal'}) }}">Decimal</a></li>
                            <li><a href="{{ path('cart_admin_item_var_option', {'datatype':'integer'}) }}">Integer</a></li>
                            <li><a href="{{ path('cart_admin_item_var_option', {'datatype':'text'}) }}">Text</a></li>
                            <li><a href="{{ path('cart_admin_item_var_option', {'datatype':'varchar'}) }}">Varchar</a></li>
                        </ul>
                        <!-- /.nav-third-level -->
                    </li>
                </ul>
                <!-- /.nav-second-level -->
            </li>
            {% endblock %}

        </ul>
        <!-- /#side-menu -->
    </div>
    <!-- /.sidebar-collapse -->
</nav>
<!-- /.navbar-static-side -->
{% endblock %}

<div id="page-wrapper">
{% for state in ['info', 'warning', 'success', 'danger'] %}
    {% for flashMessage in app.session.flashbag.get(state) %}
        <div class="alert alert-{{ state }} alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            {{ flashMessage }}
        </div>
    {% endfor %}
{% endfor %}

    <div class="row">
        {% block content %}
        <h1 class="page-header">Blank</h1>
        {% endblock %}
    </div>
    <!-- /.row -->
</div>
<!-- /#page-wrapper -->


{% endblock %}
